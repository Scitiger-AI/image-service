# 应用信息
APP_NAME=image-service
API_V1_STR=/api/v1

# MongoDB配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=image_service
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_DB_NAME=admin

# Redis配置（用于Celery）
REDIS_URL=redis://localhost:6379/0

# Celery配置
# 如果未设置，将使用Redis和MongoDB URL
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# 是否启用认证
ENABLE_AUTH=false
# SciTigerCore认证服务配置
AUTH_SERVICE_URL=http://127.0.0.1:8000
VERIFY_TOKEN_URL=/api/platform/auth/microservice/verify-token/
VERIFY_API_KEY_URL=/api/platform/auth/microservice/verify-api-key/
# 服务名称（用于权限检查）
SERVICE_NAME=image_service

# 日志配置
LOG_LEVEL=INFO

# 模型配置
DEFAULT_MODEL=wanx2.1-t2i-turbo
DEFAULT_PROVIDER=aliyun

# 任务配置
TASK_TIME_LIMIT=3600

# 阿里云配置
ALIYUN_API_KEY=
ALIYUN_API_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/text2image/image-synthesis
# 提供商支持的模型列表
ALIYUN_SUPPORTED_MODELS=wanx2.1-t2i-turbo,wanx2.1-t2i-plus,wanx2.0-t2i-turbo

# LiblibAI配置
LIBLIBAI_ACCESS_KEY=
LIBLIBAI_SECRET_KEY=
LIBLIBAI_API_URL=https://openapi.liblibai.cloud